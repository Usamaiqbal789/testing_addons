        <record id="view_product_template_form_img_inh" model="ir.ui.view">
            <field name="name">Add multi images</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook" position="inside">
                    <page string="Images" name="multi_image">
                        <field name="attachment_ids" string="Attachments" widget="many2many_kanban" mode="kanban"/>
                    </page>
                </xpath>
            </field>
        </record>


        <record model="ir.ui.view" id="view_inherit_before_name_product_product_form">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_button_box']" position="after">
                    <div style="margin-right: 150px;float:left">
                        <group name="brand">
                            <field name="brand_id"/>
                        </group>
                    </div>

                </xpath>
                <xpath expr="//field[@name='default_code']" position="replace">
                </xpath>
                <xpath expr="//field[@name='barcode']" position="replace">
                </xpath>
                <xpath expr="//group[@name='brand']" position="inside">

                    <field name="default_code" style="margin-right: 150px;"/>
                </xpath>
                <xpath expr="//field[@name='default_code']" position="attributes">
                    <attribute name="string">Part Number</attribute>
                </xpath>
                 <xpath expr="//field[@name='categ_id']" position="attributes">
                    <attribute name="string">Part Family</attribute>
                </xpath>

            </field>
        </record>



        <record model="ir.ui.view" id="view_inherit_product_product_form">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">

                    <field name="grp_id" widget="many2many_tags" invisible="1"/>
                    <field name="sub_grp_id" widget="many2many_tags" attrs="{'invisible': [('grp_id', '=', False)]}" invisible="1"/>
                    <field name="sub_sub_grp_id" widget="many2many_tags" attrs="{'invisible': ['|',('sub_grp_id', '=', False),('grp_id', '=', False)]}" invisible="1" />
                    <field name="des_arabic"/>
                    <field name="specification"></field>
                    <field name="alternate_product_warning_show" readonly="1" invisible="1"/>
                    <field name="alternate_product_warning" readonly="1" attrs="{'invisible': [('alternate_product_warning_show','=', False)]}"/>

                     <h5 style="color:##545254;text-align: center;">Group Table</h5>
                    <field name='group_product_ids' string="Group Products" colspan="4" widget="one2many_list" nolabel="1">
                        <tree editable='bottom'>
                            <field name='grp_id' string='Groups'/>
                            <field name='sub_grp_id' string='Sub Group'/>
                            <field name='sub_sub_grp_id' string='Sub Sub Group'/>

                        </tree>
                    </field>


                     <h5 style="color:##545254;text-align: center;">Alternative Product Table</h5>

                    <field name="alternative_products" nolabel="1" colspan="4" widget="one2many_list">
                        <tree editable="bottom" create="false" delete="false">
<!--                            <button name="delete_product" type="object" string="Delete" class="oe_highlight"/>-->
                            <field name="default_code" string="Part NO"/>
                            <field name="name"/>
                            <field name="lst_price"/>

                        </tree>
                    </field>

                </xpath>
                <xpath expr="//field[@name='uom_po_id']" position="after">
                    <field name="oem_code"/>
                    <field name="own_ref_no"/>
                    <field name="origin"/>
                    <field name="product_make_type_id"/>
                    <h5 style="color:##545254;text-align: center;padding-top:10Fpx;">Price Table</h5>
                    <field name='pricelist_ids' colspan="4" widget="one2many_list" nolabel="1">
                        <tree editable='bottom'>
                             <field name='pricelist_id' string="Branch"/>
                            <field name='fixed_price'/>
                            <field name='min_price' />
                            <field name='trade_price'/>
                            <field name='export_price'/>
                        </tree>
                     </field>
                </xpath>
            </field>
        </record>


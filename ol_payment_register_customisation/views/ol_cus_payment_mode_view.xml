<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="account_move_payment_mode_view" model="ir.ui.view">
            <field name="name">account.move.payment.mode.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group/group/field[@name='ref']" position="after">
                    <field name="payment_mode" string="Payment Mode"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>